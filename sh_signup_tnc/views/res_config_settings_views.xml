<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_res_config_settings_signup_terms_conditions_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.terms.conditions</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website']//div[@id='website_settings']" position="after">
                <h2>Terms &amp; Conditions</h2>
                <div class="row mt16 o_settings_container" id="terms_conditions_auth">
                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_show_terms_conditions_website_auth" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_show_terms_conditions_website_auth" />
                            <div class="text-muted">
                                On set to True "Terms and Conditions" will be visible at sign up
                            </div>

                            <div class="content-group" attrs="{'invisible': [('sh_show_terms_conditions_website_auth', '=', False)]}">
                                <div class="row mt16">
                                    <label for="sh_terms_title_auth" string="Title" class="col-md-6 o_light_label" />
                                    <field name="sh_terms_title_auth" class="col-md-12" style="margin-left: 18px;" />
                                </div>
                                <div class="row mt16">
                                    <label for="sh_terms_label_auth" string="Label" class="col-md-6 o_light_label" />
                                    <field name="sh_terms_label_auth" class="col-md-12" style="margin-left: 18px;" />
                                </div>
                                <div class="row mt16">
                                    <label for="sh_terms_text_auth" string="Terms &amp; Conditions" class="col-md-6 o_light_label" />
                                    <field name="sh_terms_text_auth" class="col-md-12" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>