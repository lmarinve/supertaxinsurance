<?xml version="1.0" encoding="utf-8"?>
<!-- inherit res.partner form view and add new fields and fetch value from sign up form -->
<odoo>
    <data>    
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">Partner Form Inherited</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
		<xpath expr="//field[@name='vat']" position="after">
		    <label for="dependents" string="Children #"/>
		    <div class="o_row">
                    	<field name='dependents' placeholder="Children #" attrs="{'invisible':[('company_type','=','company')]}"/>
                    	<field name='civil_status' placeholder="Civil Status" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
		    <label for="age" string="Age"/>
		    <div class="o_row">
			<field name='age' placeholder="Age" attrs="{'invisible':[('company_type','=','company')]}"/>
                    	<field name='date' placeholder="Birthdate"/>
		    </div>
		    <label for="weight" string="Weight"/>
		    <div class="o_row">
                    	<field name='weight' placeholder="Weight" attrs="{'invisible':[('company_type','=','company')]}"/>
		    	<field name='height' placeholder="Height" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
		    <label for="license_exp" string="Driver ID expiration"/>
		    <div class="o_row">
                    <field name='license_exp' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='license_no' placeholder="Driver license or ID #" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
		    <label for="permit_exp" string="Work Permit expiration"/>
		    <div class="o_row">
                    <field name='permit_exp' attrs="{'invisible':[('company_type','=','company')]}"/>          
                    <field name='permit_no' placeholder="Work Permit #" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
		    <label for="passport_exp" string="Passport expiration"/>
		    <div class="o_row">
		    <field name='passport_exp' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='passport_no' placeholder="Passport #" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
		    <label for="nationality" string="Nationality"/>
		    <div class="o_row">
                    <field name='nationality' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='place_of_birth' placeholder="Place of Birth" attrs="{'invisible':[('company_type','=','company')]}"/>
		    </div>
                </xpath>
                <xpath expr="//field[@name='function']" position="after">
                    <field name='income' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='industry_id' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='no_of_employees' placeholder="Employees range" attrs="{'invisible':[('company_type','=','company')]}"/>
	        </xpath>
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name='gender' attrs="{'invisible':[('company_type','=','company')]}" options="{'horizontal': true}" class="oe_form_label_new" widget="radio"/>
                    <field name='tobacco' attrs="{'invisible':[('company_type','=','company')]}"/>
	        </xpath>
		<xpath expr="//field[@name='child_ids']/form/sheet/group/group[1]/field[@name='name']" position="after">
		    <field name="vat" attrs="{'invisible': [('type','!=', 'contact')]}"/>
		    <field name="gender" attrs="{'invisible': [('type','!=', 'contact')]}"/>
		    <field name="age" attrs="{'invisible': [('type','!=', 'contact')]}"/>
		    <field name="date" attrs="{'invisible': [('type','!=', 'contact')]}"/>
	    	</xpath>
		<xpath expr="//field[@name='child_ids']/form/sheet/group/group[2]/field[@name='mobile']" position="after">
		    <field name="license_no" attrs="{'invisible': [('type','!=', 'contact')]}"/>
		    <field name="permit_no" attrs="{'invisible': [('type','!=', 'contact')]}"/>
		    <field name="passport_no" attrs="{'invisible': [('type','!=', 'contact')]}"/>
	    	</xpath>
            </field>
        </record>       
    </data>
</odoo>
