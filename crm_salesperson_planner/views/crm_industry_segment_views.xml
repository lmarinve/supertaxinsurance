<odoo>
    <record
        model="ir.ui.view"
        id="crm_industry_segment_tree_view"
    >
        <field name="name">CRM - Industry Segment Tree</field>
        <field name="model">crm.industry.segment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record
        model="ir.ui.view"
        id="crm_industry_segment_form_view"
    >
        <field name="name">CRM - Industry Segment Form</field>
        <field name="model">crm.industry.segment</field>
        <field name="arch" type="xml">
            <form string="Industry Segment">
                <sheet string="Industry Segment">
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                            <field name="code" />
		    </group>
		    <notebook>
                        <page string="Nature of Jobs">
                            <field name="job_nature_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="crm_industy_segment_action"
    >
        <field name="name">Industry Segment</field>
        <field name="res_model">crm.industry.segment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Record industry segment.
            </p>
        </field>
    </record>
</odoo>
