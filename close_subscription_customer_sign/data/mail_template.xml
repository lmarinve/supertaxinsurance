<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="custom_email_template_subscription_colse_esign" model="mail.template">
            <field name="name">Signature: Close Subscription - Send by Mail</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">{{object.name}} - To Do Signature</field>
            <field name="email_from">{{object.user_id.email_formatted or object.company_id.email}}</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello ,
                        <br/><br/>
                        Your <t t-out="object.name"/> has been closed so please do signature on your subscription to give confirmation on close subscription.
                        <br/><br/>

                        Please check for any renewal or update process or discuss with your manager.
                        <br/>

                    <t t-set="is_online" t-value="access_action and access_action['type'] == 'ir.actions.act_url'"/>
                    <t t-set="access_action" t-value="object.get_access_action()"/>
                    <t t-set="custom_access_url" t-value="object.get_access_action()"/>

                   <!--  <div style="margin: 16px 0px 16px 0px;">
                            <a t-attf-href="my/sale_subscription_custom/{{object.id}}/do_sign#uuid={{object.uuid}}"
                                style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                Sign Now
                            </a>
                        </div> -->
                        
                    <p style="margin: 16px 0px 16px 0px; text-align: left;">
                        <a t-attf-href="{{custom_access_url}}"
                            style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            Sign Now
                        </a>
                    </p>
                        
                        <br/>
                    </p>
                </div>
            </field>
            <field name="lang">{{object.create_uid.lang}}</field>

            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
