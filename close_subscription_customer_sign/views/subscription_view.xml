<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_view_form_inherit_signature_custom" model="ir.ui.view">
        <field name="name">sale.order.inherit.signature.custom</field>
        <!-- <field name="model">sale.subscription</field> -->
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_primary_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="subscripiton_sign_page" string="Signature">
                    <field name="custom_signature_ids">
                        <tree>
                            <field name="signed_at"/>
                            <field name="signed_user_id"/>
                            <field name="custom_signature_img" widget="image" />
                        </tree>
                        <form>
                            <group>
                                <field name="signed_at"/>
                                <field name="signed_user_id"/>
                                <field name="custom_signature_img" widget="image" />
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
