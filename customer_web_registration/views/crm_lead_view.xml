<?xml version="1.0" encoding="utf-8"?>
<!-- inherit crm.lead form view and add fields. for new created lead from contact us page -->
<odoo>
  <data>
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">Crm Lead View Inherited</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">              
            <xpath expr="//field[@name='lang_id']" position="after">
                <field name="no_of_employees"/>
                <field name="industry_sector"/>
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                <field name='legal_representative'/>
                <field name='designation'/>
                <field name='legal_number'/>
                <field name='contract_term'/>
                <field name='contract_from'/>
                <field name='contract_to'/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>
