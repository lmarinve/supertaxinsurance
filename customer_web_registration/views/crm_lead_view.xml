<?xml version="1.0" encoding="utf-8"?>
<!-- inherit crm.lead form view and add fields. for new created lead from contact us page -->
<odoo>
  <data>
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">Crm Lead View Inherited</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">              
            <xpath expr="//field[@name='lang_id']" position="after">
                <field name="employment_status"/>
                <field name="nature_of_job"/>
                <field name="employer_name"/>
                <field name="industry_sector"/>
                <field name="industry_segment"/>
                <field name="no_of_employees"/>
            </xpath>
            <xpath expr="//field[@name='email_cc']" position="after">
                <field name='interested_products'/>
                <field name='contact_number'/>
                <field name='referral_name'/>
                <field name='birthday'/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>
