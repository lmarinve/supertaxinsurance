<?xml version="1.0" encoding="utf-8"?>
<!-- inherit contact us page and modify contact us form and when submit redirect to contact us thankyou page-->
<odoo>
	<template id="contactus_custom" inherit_id="website_crm.contactus_form">
		<xpath expr="//div[@id='wrap']" position="replace">
			<div class="oe_structure oe_empty">
				<section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                    			<span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                    			<div class="o_we_bg_filter bg-black-50"/>
                    			<div class="container">
                        			<h1>Contact us</h1>
                    			</div>
				</section>
				<section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                    		    <div class="container s_allow_columns">
					<div class="row">
					    <div class="col-lg-8 mt-4 mt-lg-0">
							<p>
                                    			Contact us about anything related to our company or services.<br/>
                                    			We'll do our best to get back to you as soon as possible.
                                			</p>
						<section class="s_website_form" data-name="contact us form" data-snippet="s_website_form" data-vcss="001">
							<div class="container">
								<form action="/submitted/contact/lead" class="o_mark_required" data-mark="*" enctype="multipart/form-data" method="POST">
									<input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>
									<div class="s_website_form_rows row s_col_no_bgcolor">
											<div class="row s_col_no_resize s_col_no_bgcolor">
												<div class="form-group s_website_form_field col-12 s_website_form_custom s_website_form_required col-lg-12 o_colored_level" data-name="Field" data-type="char" style="visibility:hidden;">
													<label class="s_website_form_label" for="check_counter_id" style="width: 100px"/>
													<input class="form-control s_website_form_input" id="check_counter_id" name="check_counter_id" type="checkbox"/>
												</div>
											</div>
											<div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
											    	<div class="row s_col_no_resize s_col_no_bgcolor">
													<label class="col-form-label col-sm-auto s_website_form_label" for="khyyke60o4c" style="width: 200px">
														<span class="s_website_form_label_content">Company Name</span>
													</label>
													<div class="col-sm">
                                                            							<input class="form-control s_website_form_input" name="company_name" type="text" id="khyyke60o4c" required=""/>
                                                        						</div>
											    	</div>
											</div>
											<div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
												<div class="row s_col_no_resize s_col_no_bgcolor">
													<label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="khyyke60o4c">
														<span>Contact Name</span>
													</label>
													<div class="col-sm">
														<input class="form-control s_website_form_input" id="khyyke60o4c" name="name" pattern="[a-zA-Z ]*" placeholder="Name" required="1" title="Please Enter Alphabets Only" type="text"/>
													</div>
											</div>
											<div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
												<div class="row s_col_no_resize s_col_no_bgcolor">
													<label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="khyyke60o4c">
														<span>Contact Phone</span>
													</label>
													<div class="col-sm">
														<input class="form-control s_website_form_input" id="khyyke60o4c" name="phone" placeholder="Phone" required="true" type="text"/>
													</div>
												</div>
											</div>
											<div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
												<div class="row s_col_no_resize s_col_no_bgcolor">
													<label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="khyyke60o4c">
														<span>Contact Email</span>
													</label>
													<div class="col-sm">
														<input class="form-control s_website_form_input" id="khyyke60o4c" name="email_from" placeholder="Email" required="true" type="email"/>
													</div>
												</div>
											</div>
											<div class="row">
                                                                                                <div class="form-group s_website_form_field col-12 s_website_form_custom s_website_form_required col-lg-12 o_colored_level" data-name="Field" data-type="many2one" id="khyyke60o4c">
                                                                                                        <label class="s_website_form_label" for="khyyke60o4c" style="width: 200px">
                                                                                                                <b>
                                                                                                                        <span>
                                                                                                                                Country
                                                                                                                        </span>
                                                                                                                </b>
                                                                                                        </label>
                                                                                                        <select class="form-control" name="country_id" id="country_id_onchange" required="1">
                                                                                                                <option value=""/>
                                                                                                                <t t-as="country_id" t-foreach="request.env['res.country'].search([]) or []">
                                                                                                                        <option t-att-value="country_id.id" t-esc="country_id.name"/>
                                                                                                                </t>
                                                                                                        </select>
                                                                                                </div>
                                                                                        </div>
											<div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required" data-type="char" data-name="Field">
												<div class="row s_col_no_resize s_col_no_bgcolor">
													<div class="col-sm">
													<textarea class="form-control s_website_form_input" id="khyyke60o4c" name="description" placeholder="Comments/Notes" required="1" rows="1" style="height: 100px;"/>
													</div>
												</div>
											</div>
											<br/>
											<br/>
											<div class="row">
												<div class="form-group col-12 s_website_form_submit col-lg-12 pb12 pt12 text-center">
													<div style="width: 100px !important;"/>
													<button class="btn btn-primary btn-lg saturate_send" style="width: 140px !important;">
														SUBMIT
													</button>
													<span class="text-danger ml4"/>
													</div>
												</div>
											</div>
										</div>
								</form>
							</div>
						</section>
					</div>
					<div class="col-lg-4 mt-4 mt-lg-0">
                                	    <ul class="list-unstyled mb-0 ps-2">
                                    		<li><i class="fa fa-map-marker fa-fw me-2"/><span class="o_force_ltr">2980 NE 207th ST - Suite 343</span></li>
                                    		<li><i class="fa fa-phone fa-fw me-2"/><span class="o_force_ltr">+1 (305) 555-0111</span></li>
                                    		<li><i class="fa fa-1x fa-fw fa-envelope me-2"/><span>info@baygroup.com</span></li>
                                	    </ul>
                            		</div>
				    </div>
				</div>
			    </section>
			</div>
		</xpath>
	</template>
</odoo>
