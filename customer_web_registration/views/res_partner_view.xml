<?xml version="1.0" encoding="utf-8"?>
<!-- inherit res.partner form view and add new fields and fetch value from sign up form -->
<odoo>
    <data>    
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">Partner Form Inherited</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_company','!=', True)]}</attribute>              
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="invisible">0</attribute>              
                </xpath>                
                <xpath expr="//span[@name='address_name']" position="before">
                    <field name='first_name' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='last_name' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='birthdate' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='gender' attrs="{'invisible':[('company_type','=','company')]}" options="{'horizontal': true}" class="oe_form_label_new" widget="radio"/>
                    <field name='nationality' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='employment_status' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='employer_name' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='nature_of_job' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='industry_segment' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='no_of_employees' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='interested_fields' attrs="{'invisible':[('company_type','=','company')]}"/>
                    <field name='referral_name' attrs="{'invisible':[('company_type','=','company')]}"/>          
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                    <field name='company_name' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='no_of_employees' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='industry_sector' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='legal_representative' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='designation' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='legal_number' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='contract_term' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='contract_from' attrs="{'invisible':[('company_type','=','person')]}"/>
                    <field name='contract_to' attrs="{'invisible':[('company_type','=','person')]}"/>
                </xpath>
            </field>
        </record>       
    </data>
</odoo>
